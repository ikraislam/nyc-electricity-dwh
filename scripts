import requests
import pandas as pd

API_URL = "https://data.cityofnewyork.us/resource/jr24-e7cr.json"

params = {
    "$limit": 500000
}

response = requests.get(API_URL, params=params)
data = response.json()

df = pd.DataFrame(data)

df.to_csv("data_raw/electric_consumption_raw.csv", index=False)

print("Data downloaded and saved.")
